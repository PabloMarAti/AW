			<h1>Ingreso en el sistema</h1>

			<form method="POST" enctype="multipart/form-data" action="Logear">
			<table class="tabla">
			<tr>
				<td class="rightAlign">Nombre de usuario: </td>
				<td><input type="text" name="usuario" placeholder="Usuario"
				<%if(correcto === false) { %>
                value=<%=usuario %>
                <% } %>></td>
			</tr>
			<tr>
				<td class="rightAlign">Contraseña: </td>
				<td><input type="password" name="contraseña" placeholder="Contraseña"></td>
			</tr>
			<tr>
				<td></td>
				<td><input class="boton" type="submit" value="Identificarse"></td>
			</tr>
			</table>
			</form></div>


